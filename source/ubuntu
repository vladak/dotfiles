# This file contains Ubuntu specific settings.

function is_ubuntu {
	lsb_release -ds 2>/dev/null | grep Ubuntu >/dev/null
}

if ! is_ubuntu; then
	return
fi

if [ -d /usr/lib/jvm/java-8-oracle ]; then
	export JAVA_HOME=/usr/lib/jvm/java-8-oracle
fi

# This is specific to my laptop and is probably not needed anymore
# except ls(1) complains when LANG is not set.
export LANG=cs_CZ.ISO-8859-2
